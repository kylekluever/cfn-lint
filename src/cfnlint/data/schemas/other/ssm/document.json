{
 "$schema": "http://json-schema.org/draft-07/schema",
 "additionalProperties": false,
 "properties": {
  "assumeRole": {
   "type": "string"
  },
  "description": {
   "type": "string"
  },
  "files": {
   "additionalProperties": false,
   "patternProperties": {
    "^.*$": {
     "$ref": "files#/"
    }
   },
   "type": "object"
  },
  "mainSteps": {
   "items": {
    "$ref": "steps#/"
   },
   "minItems": 1,
   "type": "array"
  },
  "outputs": {
   "items": {
    "type": "string"
   },
   "type": "array"
  },
  "parameters": {
   "additionalProperties": false,
   "patternProperties": {
    "^.*$": {
     "$ref": "parameters#/"
    }
   },
   "type": "object"
  },
  "schemaVersion": {
   "description": "The schema version to use.",
   "enum": [
    "0.3"
   ],
   "type": "string"
  }
 },
 "required": [
  "schemaVersion",
  "mainSteps"
 ],
 "title": "JSON schema for AWS Automation Documents",
 "type": "object"
}
